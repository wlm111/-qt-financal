/* 公共按钮 */
.user-set-btn{
	width: 100%;
	margin: 20rpx 0;
	background: #3ff595!important;
	border: 0!important;
	color: #333333!important;
}
.user-set-btn-disable{
	background: #3ff595!important;
	border: 1rpx solid #3ff595!important;
	color: #171606!important;
}
.body{
	padding: 0 20rpx!important;
}
.common-input{
	font-size: 30rpx;
	border-bottom: 1rpx solid #F4F4F4;
}
.btn-plusempty{
	width: 110rpx;
	height: 110rpx;
	background: #3ff595;
	position: fixed;
	bottom: 50rpx;
	right: 20rpx;
	border-radius: 100%;
	overflow: hidden;
	text-align: center;
	line-height: 110rpx;
}
.bottom-btn-hover{
	background: #3ff595!important;
}
.btn-text{
	font-weight: bold;
	font-size: 36rpx;
	color: #F5F5F5;
}
.addinput-foot{
	background: #4CD964;
	position: fixed;bottom: 0;left: 0;right: 0;height: 88rpx;border-top:1rpx solid #DDDDDD
}
.addinput-foot view{
	height: 100%;
}
.addinput-foot-btn{
	background: #F4F4F4;
}
.user-set-userinfo-list{
	padding: 20rpx;
	border-bottom: 1rpx solid #F4F4F4;
}
.user-set-userinfo-list>view:first-child{
	font-size: 32rpx;
	font-weight: bold;
	color: #9B9B9B;
}
.user-set-userinfo-list>view:last-child>image{
	width: 80rpx;
	height: 80rpx;
	border-radius: 100%;
}
.user-set-userinfo-list>view:last-child>input{
	text-align: right;
}
.user-set-userinfo-list>view:last-child>view:last-of-type{
	margin-left: 20rpx;
	color: #9B9B9B;
}
