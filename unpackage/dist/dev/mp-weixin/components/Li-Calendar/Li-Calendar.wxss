	text-align: center;
}
.calendar-header {
	color: gray;
	height: 40rpx;
	line-height: 40rpx;
	vertical-align: middle;
	font-size: 24rpx;
}
.calendar-day {
	height: 80rpx;
	-webkit-transform: translate3d(0px, 0px, 0px) translateZ(0px);
	        transform: translate3d(0px, 0px, 0px) translateZ(0px); -webkit-transition-duration: 0ms; transition-duration: 0ms; -webkit-transition-timing-function: cubic-bezier(0.165, 0.84, 0.44, 1); transition-timing-function: cubic-bezier(0.165, 0.84, 0.44, 1);
}
