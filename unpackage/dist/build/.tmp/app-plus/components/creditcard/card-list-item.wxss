.list1 {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 0 40rpx;
  padding-top: 40rpx;
  height: 200rpx;
}
.list1 .cardList {
	  -webkit-box-flex: 1;
	  -webkit-flex: 1;
	          flex: 1;
	  display: -webkit-box;
	  display: -webkit-flex;
	  display: flex;
	  -webkit-box-orient: vertical;
	  -webkit-box-direction: normal;
	  -webkit-flex-direction: column;
	          flex-direction: column;
	  -webkit-box-pack: center;
	  -webkit-justify-content: center;
	          justify-content: center;
	  padding: 0 40rpx;
	  height: 200rpx;
	  overflow: hidden;
	  background: #EEEEEE;
	  color: hsla(0,0%,100%,.3);
	  font-size: 12px;
	  box-shadow:4rpx 4rpx 10rpx #CCCCCC;
}
.list1 .cardList .card {
	  text-overflow: ellipsis;
	  overflow: hidden;
	  white-space: nowrap;
	  line-height: 52rpx;
	  color:#000;
	  text-align: center;
}

